  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "22.10.5",
    "husky": "9.1.1",
    "lint-staged": "15.2.7",
    "typescript": "5.5.4",
    "vite-plugin-compression": "0.5.1"
